{
  "compilerOptions": {
    // Target and Module Configuration - Surgical precision for modern development
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",

    // JSX Configuration - Zero friction React development
    "jsx": "react-jsx",
    "jsxImportSource": "react",

    // Type Checking - Strict but clean
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Module Resolution - Clean and efficient
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    // Code Quality - Zero tolerance for unused code
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": false,

    // Emit Configuration - Optimized for development speed
    "noEmit": true,
    "declaration": false,
    "sourceMap": true,
    "removeComments": false,
    "importHelpers": true,

    // Performance Optimization
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "skipLibCheck": true,

    // Path Mapping - Clean imports
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@lib/*": ["./src/lib/*"],
      "@utils/*": ["./src/utils/*"],
      "@types/*": ["./src/types/*"]
    }
  },

  // File Inclusion - Surgical precision
  "include": [
    "src/**/*",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "vite.config.ts"
  ],

  // File Exclusion - Clean compilation
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    ".nyc_output",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "cypress",
    "playwright"
  ],

  // TypeScript 5.x Features
  "ts-node": {
    "esm": true
  }
}